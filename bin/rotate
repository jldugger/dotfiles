#!/bin/sh
rotation=`xrandr -q --verbose | grep "^LVDS-0 connected" | cut -d" " -f5`

case "$rotation" in
   'normal')   
      xrandr -o inverted
      xsetwacom set stylus rotate half
         ;;   
   'inverted')
      xrandr -o left
      xsetwacom set stylus rotate 2
         ;;
   'left')
      xrandr -o right
      xsetwacom set stylus rotate 1
         ;;
   'right'	)
      xrandr -o normal
      xsetwacom set stylus rotate 0
         ;;
esac


