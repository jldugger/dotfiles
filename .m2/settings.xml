<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0                       http://maven.apache.org/xsd/settings-1.0.0.xsd">
  <profiles>
    <profile>
      <id>defaultDeployProfile</id>
      <properties>
        <maven.jboss.hostname>ome-dev-as1.ome.campus</maven.jboss.hostname>
        <maven.jboss.port>8440</maven.jboss.port>
        <dynamic.type>compile</dynamic.type>
        <deployment.type>war</deployment.type>
        <ome.jboss.ejb.port>8441</ome.jboss.ejb.port>
        <ome.jboss.war.port>8440</ome.jboss.war.port>
        <ome.jboss.ear.port>8440</ome.jboss.ear.port>
      </properties>
      <repositories>
                <repository>
                        <id>ome-maven2</id>
                        <name>ome-maven2</name>
                        <url>http://rep.ome.ksu.edu/maven2-lib</url>
                </repository>

       </repositories>
      <pluginRepositories>
                <pluginRepository>
                        <id>ome-maven2</id>
                        <name>ome-maven2</name>
                        <url>http://rep.ome.ksu.edu/maven2-lib</url>
                </pluginRepository>

       </pluginRepositories>


    </profile>

    <profile>
      <id>warDeployProfile</id>
      <activation>
         <property>
             <name>deploy</name>
             <value>war</value>
         </property>
      </activation>
      <properties>
        <maven.jboss.hostname>ome-dev-as1.ome.campus</maven.jboss.hostname>
        <maven.jboss.port>8440</maven.jboss.port>
        <dynamic.type>compile</dynamic.type>
        <deployment.type>war</deployment.type>
        <ome.jboss.ejb.port>8441</ome.jboss.ejb.port>
        <ome.jboss.war.port>8440</ome.jboss.war.port>
        <ome.jboss.ear.port>8440</ome.jboss.ear.port>
      </properties>
    </profile>
    <profile>
      <id>earDeployProfile</id>
      <activation>
         <property>
             <name>deploy</name>
             <value>ear</value>
         </property>
      </activation>

      <properties>
            <maven.jboss.hostname>ome-dev-as1.ome.campus</maven.jboss.hostname>
            <maven.jboss.port>8440</maven.jboss.port>
            <dynamic.type>provided</dynamic.type>
            <deployment.type>ear</deployment.type>
            <ome.jboss.ejb.port>8441</ome.jboss.ejb.port>
            <ome.jboss.war.port>8440</ome.jboss.war.port>
            <ome.jboss.ear.port>8440</ome.jboss.ear.port>
      </properties>
    </profile>
  </profiles>
<activeProfiles>

 <activeProfile>defaultDeployProfile</activeProfile>

</activeProfiles>


<servers>
  <server>
   <id>ome-maven1</id>
   <username>jldugger</username>
   <filePermissions>664</filePermissions>
   <directoryPermissions>775</directoryPermissions>
  </server>

  <server>
    <id>ome-maven2</id>
    <username>jldugger</username>
    <filePermissions>664</filePermissions>
    <directoryPermissions>775</directoryPermissions>
  </server>
</servers>
</settings>
