# sadly, include.path does not support *

[include]
        path = ~/.gitconfig.d/alias.conf
        path = ~/.gitconfig.d/autocorrect.conf
        path = ~/.gitconfig.d/colors.conf
        path = ~/.gitconfig.d/gitignore.conf
        path = ~/.gitconfig.d/launchpad.conf
        path = ~/.gitconfig.d/programs.conf
        path = ~/.gitconfig.d/push.conf
        path = ~/.gitconfig.d/user.conf
        path = ~/.gitconfig.d/whitespace.conf
        # allow for local overrides
        path = ~/.gitconfig.d/private.conf
[color]
	ui = true
